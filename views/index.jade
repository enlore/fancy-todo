extends layouts/base
block body
  h1 wooo
  if todos
    ul
      -for item in todos
        li
          p
            a(class="todo-item", href="/edit/" + item._id) #{item.content}  
            a(href='/destroy/' + item._id)
              button &times;

  form(action="/create", method="post", class="todo-form")
    input(type="text", name="content")
    input(type="submit", value="submit")
